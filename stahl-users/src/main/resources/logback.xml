<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <include resource="org/springframework/boot/logging/logback/defaults.xml" />
    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />
    <import class="ch.qos.logback.core.boolex.PropertyConditionBase"/>

    <condition class="ch.qos.logback.core.boolex.IsPropertyDefinedCondition">
        <key>LOKI</key>
    </condition>
    <if>
        <then>
            <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
                <http>
                    <url>${LOKI_SERVER_URL}/loki/api/v1/push</url>
                </http>
                <format>
                    <label>
                        <pattern>application=stahl-users,host=${HOSTNAME},level=%level</pattern>
                    </label>
                    <message>
                        <pattern>${CONSOLE_LOG_PATTERN}</pattern>
                    </message>
                    <sortByTime>true</sortByTime>
                </format>
            </appender>

            <root level="info">
                <appender-ref ref="CONSOLE"/>
                <appender-ref ref="LOKI"/>
            </root>
        </then>
        <else>
            <root level="info">
                <appender-ref ref="CONSOLE"/>
            </root>
        </else>
    </if>

</configuration>